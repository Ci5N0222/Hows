<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Banner">

	<!-- 배너 삭제 -->
	<delete id="delete">
		delete from banner where banner_seq = #{banner_seq}
	</delete>
	
	<!-- 사이트에 노출할 배너 목록 -->
	<select id="selectAll" resultType="com.hows.banner.dto.BannerDTO">
		select * from banner where banner_order != 0 order by banner_order
	</select>
	
	<!-- 관리자의 배너 목록 전체 조회 -->
	<select id="selectAllByAdmin" resultType="com.hows.banner.dto.BannerDTO">
		select * from banner order by banner_order, banner_seq desc
	</select>
	
	<!-- 배너 추가 -->
	<insert id="insert">
		insert into banner values (banner_seq.nextval, #{file_seq}, #{banner_url}, #{start_date}, #{end_date}, #{banner_order})
	</insert>
	
	<!-- 배너 순서 변경 -->
	<update id="updateOrder">
		update banner set banner_order = #{bannerOrder} where banner_seq = #{bannerSeq}
	</update>
</mapper>