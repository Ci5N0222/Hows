<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Cart">

    <select id="cartList" resultType="com.hows.cart.dto.CartDTO">
        SELECT
            *
        FROM
            cart
    </select>

    <insert id="addCart">
        INSERT INTO
            cart
        VALUES(
            cart_seq.nextval,
            #{product_seq},
            #{member_seq},
            #{cart_quantity},
            #{cart_price},
            sysdate
        )
    </insert>

    <update id="updateCart">
        UPDATE
            cart
        SET
            cart_quantity = #{count}
        WHERE
            cart_seq = #{seq}
    </update>

    <delete id="deleteCart">
        DELETE FROM
            cart
        WHERE
            cart_seq = #{seq}
    </delete>

</mapper>